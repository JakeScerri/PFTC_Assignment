@using System.Security.Claims
@{
    ViewData["Title"] = "Technician Area";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Technician Area</h2>
        </div>
        <div class="card-body">
            <p>This area is accessible only to technicians.</p>
            <div class="alert alert-info">
                <strong>Note:</strong> If you can see this page, your role is "Technician" and the authorization attribute is working correctly.
            </div>
            
            <hr>
            
            <h4>Process Tickets</h4>
            <p>Manually trigger ticket processing to move tickets from PubSub to Redis cache.</p>
            <div class="mb-3">
                <button id="processTicketsBtn" class="btn btn-primary">Process Tickets</button>
                <button id="testRedisBtn" class="btn btn-secondary ms-2">Test Redis Directly</button>
            </div>
            <div id="processResult" class="mb-3"></div>
            
            <hr>
            
            <h4>Technician Dashboard</h4>
            <div class="row">
                <div class="col-md-12">
                    <button id="loadTicketsBtn" class="btn btn-info mb-3">Load Tickets</button>
                    <div id="ticketsContainer">
                        <p>Click "Load Tickets" to fetch tickets from Redis cache.</p>
                    </div>
                </div>
            </div>
            
            <hr>
            
            <h4>Close Ticket</h4>
            <div class="input-group mb-3">
                <input type="text" id="ticketIdInput" class="form-control" placeholder="Enter Ticket ID">
                <button class="btn btn-outline-secondary" type="button" id="closeTicketBtn">Close Ticket</button>
            </div>
            
            <div id="closeTicketResult" class="mt-3"></div>
            
            <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Process tickets functionality
            $('#processTicketsBtn').click(function() {
                $(this).prop('disabled', true);
                $('#processResult').html('<div class="alert alert-info">Processing tickets...</div>');
                
                $.ajax({
                    url: '/api/processor/process-tickets',
                    type: 'POST',
                    success: function(data) {
                        $('#processResult').html(
                            '<div class="alert alert-success">' + (data.message || 'Tickets processed successfully') + '</div>'
                        );
                    },
                    error: function(error) {
                        $('#processResult').html(
                            '<div class="alert alert-danger">Error: ' + 
                            (error.responseJSON?.message || error.responseText || error.statusText) + 
                            '</div>'
                        );
                    },
                    complete: function() {
                        $('#processTicketsBtn').prop('disabled', false);
                    }
                });
            });
            
            // Test Redis functionality
            $('#testRedisBtn').click(function() {
                $(this).prop('disabled', true);
                $('#processResult').html('<div class="alert alert-info">Testing Redis connection...</div>');
                
                $.ajax({
                    url: '/api/technicians/test-redis',
                    type: 'GET',
                    success: function(data) {
                        $('#processResult').html(
                            '<div class="alert alert-success">' + data.message + ' (ID: ' + data.ticketId + ')</div>'
                        );
                        // Auto-load tickets after test
                        $('#loadTicketsBtn').click();
                    },
                    error: function(error) {
                        $('#processResult').html(
                            '<div class="alert alert-danger">Redis Test Error: ' + 
                            (error.responseJSON?.message || error.responseText || error.statusText) + 
                            '</div>'
                        );
                    },
                    complete: function() {
                        $('#testRedisBtn').prop('disabled', false);
                    }
                });
            });
            
            // Load tickets functionality
            $('#loadTicketsBtn').click(function() {
                $(this).prop('disabled', true);
                $('#ticketsContainer').html('<div class="alert alert-info">Loading tickets...</div>');
                
                $.ajax({
                    url: '/api/technicians/tickets',
                    type: 'GET',
                    success: function(data) {
                        if (data.tickets && data.tickets.length > 0) {
                            let html = '<div class="list-group">';
                            
                            data.tickets.forEach(function(ticket) {
                                let priorityClass = 'bg-success';
                                if (ticket.priority === 0) priorityClass = 'bg-danger';
                                else if (ticket.priority === 1) priorityClass = 'bg-warning';
                                
                                html += `
                                    <div class="list-group-item ${ticket.status === 2 ? 'text-muted' : ''}">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-1">
                                                <span class="badge ${priorityClass} me-2">
                                                    ${ticket.priority === 0 ? 'High' : ticket.priority === 1 ? 'Medium' : 'Low'}
                                                </span>
                                                ${ticket.title}
                                            </h5>
                                            <small>${new Date(ticket.dateUploaded).toLocaleString()}</small>
                                        </div>
                                        <p class="mb-1">${ticket.description}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small>From: ${ticket.userEmail}</small>
                                            <small>Status: ${ticket.status === 0 ? 'Open' : ticket.status === 1 ? 'In Progress' : 'Closed'}</small>
                                            ${ticket.status !== 2 ? 
                                                `<button class="btn btn-sm btn-secondary close-ticket-btn" data-ticket-id="${ticket.id}">Close Ticket</button>` : 
                                                ''}
                                        </div>
                                    </div>
                                `;
                            });
                            
                            html += '</div>';
                            $('#ticketsContainer').html(html);
                            
                            // Add event handlers for close buttons
                            $('.close-ticket-btn').click(function() {
                                const ticketId = $(this).data('ticket-id');
                                closeTicket(ticketId);
                            });
                        } else {
                            $('#ticketsContainer').html('<div class="alert alert-warning">No tickets found in Redis cache.</div>');
                        }
                    },
                    error: function(error) {
                        $('#ticketsContainer').html(
                            '<div class="alert alert-danger">Error loading tickets: ' + 
                            (error.responseJSON?.message || error.responseText || error.statusText) + 
                            '</div>'
                        );
                    },
                    complete: function() {
                        $('#loadTicketsBtn').prop('disabled', false);
                    }
                });
            });

            // Close ticket functionality
            $('#closeTicketBtn').click(function() {
                var ticketId = $('#ticketIdInput').val();
                if (!ticketId) {
                    $('#closeTicketResult').html(
                        '<div class="alert alert-danger">Please enter a ticket ID</div>'
                    );
                    return;
                }
                
                closeTicket(ticketId);
            });
            
            // Helper function to close a ticket
            function closeTicket(ticketId) {
                if (!ticketId) return;
                
                $.ajax({
                    url: '/api/technicians/tickets/' + ticketId + '/close',
                    type: 'POST',
                    success: function(data) {
                        $('#closeTicketResult').html(
                            '<div class="alert alert-success">' + data.message + '</div>'
                        );
                        // Reload tickets after closing
                        $('#loadTicketsBtn').click();
                    },
                    error: function(error) {
                        $('#closeTicketResult').html(
                            '<div class="alert alert-danger">Error: ' + 
                            (error.responseJSON?.message || error.responseText || error.statusText) + 
                            '</div>'
                        );
                    }
                });
            }
        });
    </script>
}